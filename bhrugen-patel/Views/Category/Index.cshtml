@model List<Category>

<div class="container">
    <div class="row">
        <div class="col-8 text-primary display-3">Category list</div>
        <div class="col-4 text-end align-self-end"><a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category</a></div>
        </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>displayOrder</th>
            <th></th>
        </tr>     
            @foreach(var item in Model.OrderByDescending(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pencil"></i> Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </table>

</div>
