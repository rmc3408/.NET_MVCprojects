@model Recipe

@{
    Layout = "_Layout";
    ViewBag.Title = "Add New Recipe";
}



    <form asp-action="Form" method="post">
        <div class="form-group">
            <label asp-for="Name">Recipe name:</label>
            <input asp-for="Name" type="text">
        </div>

        <div class="form-group">
            <label asp-for="PreparationTime">Preparation Time:</label>
            <input type="text" asp-for="PreparationTime">
        </div>
        <div class="form-group">
            <label asp-for="Chef">Chef:</label>
            <input type="text" asp-for="Chef">
        </div>
        <div class="form-group">
            <label asp-for="Ingredient">Ingredient:</label>
            <input type="text" asp-for="Ingredient">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input type="text" asp-for="Description">
        </div>
        <div class="btn-group-lg">
            <button type="submit">SAVE RECIPE</button>
        </div>
    </form>
